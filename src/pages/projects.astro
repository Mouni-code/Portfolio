---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import Project from "../components/project.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Projets">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Mes Projets"
      description="Voici quelques uns de mes projets sur lesquels j'ai travaillé. J'aime beaucoup travailler sur des projets que ce soit seule ou en groupe surtout quand il s'agit de découvrir deVoici quelques uns de mes projets sur lesquels j'ai travaillé. J'aime beaucoup travailler sur des projets que ce soit seule ou en groupe surtout quand il s'agit de découvrir de nouvelles technologies."
    />

    <div
      class="z-50 grid items-stretch w-full grid-cols-1 my-8 gap-7 sm:gap-5 sm:grid-cols-2"
    >
      {
        projects.map((project) => {
          return (
            <Project
              name={project.name}
              description={project.description}
              url={project.url}
            />
          )
        })
      }
    </div>
  </section>
</Layout>
